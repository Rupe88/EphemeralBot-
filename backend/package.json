{
  "name": "ephemeralbot-backend",
  "version": "1.0.0",
  "description": "EphemeralBot Backend - Discord Bot & API Server",
  "main": "dist/app.js",
  "scripts": {
    "dev": "tsx watch src/app.ts",
    "build": "tsc",
    "start": "node dist/app.js",
    "bot": "tsx watch src/bot/index.ts",
    "dev:full": "concurrently \"npm run dev\" \"npm run bot\""
  },
  "dependencies": {
    "express": "^4.18.2",
    "discord.js": "^14.14.1",
    "mongoose": "^8.0.3",
    "node-cron": "^3.0.3",
    "jsonwebtoken": "^9.0.2",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "axios": "^1.6.2",
    "helmet": "^7.1.0",
    "express-rate-limit": "^7.1.5",
    "compression": "^1.7.4"
  },
  "devDependencies": {
    "@types/node": "^20.10.5",
    "@types/express": "^4.17.21",
    "@types/node-cron": "^3.0.11",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/cors": "^2.8.17",
    "@types/compression": "^1.7.5",
    "typescript": "^5.3.3",
    "tsx": "^4.6.2",
    "concurrently": "^8.2.2"
  },
  "keywords": [
    "discord",
    "bot",
    "api",
    "ephemeral"
  ],
  "author": "EphemeralBot Team",
  "license": "MIT"
}
